<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragments.OnboardingAdjustmentHighLatitudesFragment">

    <include layout="@layout/view_card_title" />

    <TextView
        android:id="@+id/explain"
        style="@style/Widget.Explain.Separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/elmasri"
        android:textColor="@color/gray1"
        android:textSize="@dimen/text14sp"
        android:text="@string/high_latitude_explain" />

    <TextView
        android:id="@+id/high_lat_none"
        style="@style/Widget.Explain.Separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/elmasri"
        android:textColor="@color/gray1"
        android:text="@string/high_lat_none" />

    <TextView
        android:id="@+id/high_lat_midnight"
        style="@style/Widget.Explain.Separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/elmasri"
        android:textColor="@color/gray1"
        android:text="@string/high_lat_midnight" />

    <TextView
        android:id="@+id/high_lat_one_seventh"
        style="@style/Widget.Explain.Separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/elmasri"
        android:textColor="@color/gray1"
        android:text="@string/high_lat_one_seventh" />

    <TextView
        android:id="@+id/high_lat_angle_based"
        style="@style/Widget.Explain.Separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/elmasri"
        android:textColor="@color/gray1"
        android:text="@string/high_lat_angle_based" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <include layout="@layout/view_prev_next" />
    </LinearLayout>

</LinearLayout>
